{% extends "layouts/default.njk" %}        

{% block main %}
    <div class="hero" id="home">
        <img src="assets/images/portrait-portfolio.png" alt="Drawn portrait Lauren Wille">
    </div>

    <section class="about" id="about">
        <div class="section__left"  data-animation="pin-left">
            <div class="pin" data-element="pin">
                <p class="section__title pin-name">about me</p>
            </div>
        </div>

        <div class="section__right">
            <div class="table">
                <div class="table__row">
                    <div class="cell empty"></div>
                    <div class="cell">
                        <ul>
                            <li>22 years old</li>
                            <li>programming since 18 years old</li>
                            <li>hobby-cyclist</li>
                            <li>belgian & welsh</li>
                        </ul>
                    </div>
                </div>
                <div class="table__row">
                    <div class="cell"><img src="/assets/images/laurenwille.png" alt="Foto of Lauren Wille"></div>
                    <div class="cell empty"></div>
                </div>
                <div class="table__row">
                    <div class="cell">
                        <ul>
                            <li>Bachelor Digital Marketing</li>
                            <li>current Graduate (front-end) Programming</li>
                            <li>self-taught beginner Graphic Designer</li>
                            <li>self employed student: Blue Bird Marketing since 1 August 2023</li>
                        </ul>
                    </div>
                    <div class="cell empty"></div>
                </div>
                <div class="table__row">
                    <div class="cell empty"></div>
                    <div class="cell">
                        <img src="/assets/images/logobbm.png" alt="Logo of Blue Bird Marketing">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="languages">
        <div class="section__left"  data-animation="pin-left">
            <div class="pin" data-element="pin">
                <p class="section__title pin-name">languages</p>
            </div>
        </div>

        <div class="section__right">
            <div class="languages grid-container">
                {%- for post in collections.languages -%}
                    <div class="language grid-item">
                        <img class="language__image" src="/assets/images/{{post.data.image}}" alt="{{post.data.title}}">
                        <div class="language__stars">
                            {{ post.data.stars | getStars | safe }}
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </section>

    <section id="projects">
        <div class="section__left"  data-animation="pin-left">
            <div class="pin" data-element="pin">
                <p class="section__title pin-name">projects</p>
            </div>
        </div>

        <div class="section__right">
            <div class="cards">
                {%- for post in collections.projects -%}
                    <div class="card">
                        <p class="project__title">{{post.data.title}}</p>
                        <div class="project__image">
                            <img src="/assets/images/{{post.data.image}}" alt="" />
                        </div>
                        <p class="project__description">
                            {{post.data.description}}
                        </p>
                        <p class="project__languages">
                            {{post.data.languagesUsed}}
                        </p>
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </section>

{% endblock main %}