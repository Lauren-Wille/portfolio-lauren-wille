<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Portfolio Lauren Wille</title>
        <link rel="stylesheet" href="/assets/style.css">
    </head>
    <body>
        {% block body %}

        {% endblock body %}

        <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>

        <script src="/assets/main.js"></script>

        <script>
            gsap.registerPlugin(ScrollTrigger);

            const initPin = () => {
                const $pinContainers = document.querySelectorAll("[data-animation='pin-left']");

                $pinContainers.forEach(container => {
                    const $pinElement = container.querySelector("[data-element='pin']");
                    const child = $pinElement.children;

                    const getHeight = () => {
                        const height = child[0].offsetWidth;
                        return container - height*2;
                        
                    };

                    
                    gsap.to($pinElement, {
                        y: () => getHeight(),
                        scrollTrigger: {
                            trigger: container,
                            start: "top top",
                            end: `100% 0%`,
                            pin: $pinElement,
                            //markers: true,
                            scrub: true,
                            invalidateOnRefresh: true,
                        },
                    });
                })
            };

            initPin();
        </script>
    </body>
</html>